<table class="table table-condensed">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Available</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item.id %></td>
			<td><%= link_to item.name, item_path(item) %></td>
			<td><%= item.availability %></td>
			<td><%= link_to "edit", edit_item_path(item) %></td>
		</tr>
		<% end %>
 </tbody>
</table>
